    endif
    mpvalueset 0 0
    mppurge knightgates
    break
  endif
  mpmath 1 $1 - (($2-$3)/10)
   mpmath 6 $1/10
  mpvalueset 0 0
  mppurge knightgates
  mpforce $n gatestrengthcheck
  endif
endif

